echo "Palettizing images..."

convert remap*.png -dither none -remap "../../../templates/paletteremap.png" "remap%04d.png"
convert img*.png -dither none -remap "../../../templates/palette.png" "img%04d.png"

echo "Compositing images..."

mkdir ../finished 2>/dev/null

for f in img*.png; do 
	g=${f:3:4}
	composite img$g.png remap$g.png "../finished/$g.bmp"
done

